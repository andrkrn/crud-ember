<form class="form-horizontal" role="form" {{action "create" on="submit"}}>
  {{#if errors}}
    <div class="alert alert-danger">
      {{error_messages}}
    </div>
  {{/if}}
  <div class="form-group">
    <label class="col-sm-2 control-label">Title</label>
    <div class="col-sm-10">
      {{input type="text" value=controller.title placeholder="Title Article" class="form-control"}}
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">Body</label>
    <div class="col-sm-10">
      {{input type="text" value=controller.body placeholder="Body" class="form-control"}}
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-blue btn-default">Submit Article</button>
    </div>
  </div>
</form>