<form class="form-horizontal" role="form" {{action "edit" model.id on="submit"}}>
  <div class="form-group">
    <label class="col-sm-2 control-label">Title</label>
    <div class="col-sm-10">
      {{input type="text" value=model.title placeholder="Title Article" class="form-control"}}
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">Description</label>
    <div class="col-sm-10">
      {{input type="text" value=model.body placeholder="Body" class="form-control"}}
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-blue btn-default">Edit Article</button>
    </div>
  </div>
</form>